<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  
    <display-name>DemoTask</display-name>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.jsp</welcome-file>
        <welcome-file>default.htm</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>TeamController</servlet-name>
        <servlet-class>controllers.TeamController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TeamController</servlet-name>
        <url-pattern>/showTeamPage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TeamController</servlet-name>
        <url-pattern>/addTeam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeamController</servlet-name>
        <url-pattern>/team</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProjectController</servlet-name>
        <servlet-class>controllers.ProjectController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProjectController</servlet-name>
        <url-pattern>/project</url-pattern>
    </servlet-mapping>

</web-app>
